#!/bin/bash


_get_repolink () {
    local regex
    regex='(https?)://github.com/.+/.+'
    then
        echo "aHR0cHM6Ly9naXRodWIuY29tL1RhbWlsQm90cy9UYW1pbFVzZXJCb3Q=" | base64 -d
    fi
}


_set_bot () {
    local zippath
    zippath="TamilBot.zip"
    echo "  Downloading TamilBot source code ..."
    wget -q $(_get_repolink) -O "$zippath"
    echo "  Unpacking Data ..."
    TAMILPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "Done"
    echo "  Cleaning ..."
    rm -rf "$zippath"
    sleep 5
    cd $TAMILPATH
    echo "    Starting TamilBot    "
    echo "
            ::::::::::::::::::::::::::::::::::::::::::::::::::::::: 
            :#########..#####...####.....####..#########..## .....: 
            :.. ##.....##....## ##..#...#..##......##.....## .....: 
            :.. ##.....##....## ##...#::#..##......##.....## .....: 
            :.. ##.....######## ##....#....##......##.....## .....: 
            :.. ##.....#.....## ##.........##......##.....## .....: 
            :.. ##.....#.....## ##.........##......##.....## .....: 
            :.. ##.....#.....## ##.........##..#########..#######.: 
            ::::::::::::::::::::::::::::::::::::::::::::::::::::::: 
    "

    echo "
     :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
     :##....##...######..######..########   #########....######..########:
     :##....##..##.......##......##.....##   ##.....##..##....##....##...:
     :##....##..##.......##......##.....##   ##.....##..##....##....##...:
     :##....##...#####...######..########    #########..##....##....##...:
     :##....##.......##..##......##...##     ##.....##..##....##....##...:
     :##....##.......##..##......##....##    ##.....##..##....##....##...:
     :.######...######...######..##....###..#########...#######.....##...:
     :::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
    " 
    python3 ../TamilBot/updater.py ../requirements.txt requirements.txt
    python3 -m userbot
}

_set_bot
